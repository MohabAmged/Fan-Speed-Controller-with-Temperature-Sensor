#ifndef MCAL_ADC_H_
#define MCAL_ADC_H_

/**************************************************************************************************************************************
*
*                                                 INCLUDES
*
**************************************************************************************************************************************/
#include "Macros.h"
#include "Std_Types.h"
#include "avr/io.h"

/**************************************************************************************************************************************
*
*                                                 types Definition
*
**************************************************************************************************************************************/




	/*              ReferenceVolatge Type                       */
 typedef enum
 {
	 ADC_AREF,
	 ADC_AVCC,
	 ADC_INTERNAL=3
 } ADC_ReferenceVolatge;




	/*          Prescalers Definition Type                       */
 typedef enum
 {
    ADC_DIV2=1,
	ADC_DIV4,
	ADC_DIV8,
	ADC_DIV16,
	ADC_DIV32,
	ADC_DIV64,
	ADC_DIV128
 } ADC_Prescaler;


 /*          Config Struct Type                       */

 typedef struct{

  ADC_ReferenceVolatge ref_volt;
  ADC_Prescaler prescaler;

 }ADC_ConfigType;


/**************************************************************************************************************************************
*
*                                                Functions Prototypes
*
**************************************************************************************************************************************/

/* Timer PWM Start Function With The given Duty Cycle */
 void ADC_init(const ADC_ConfigType * Config_Ptr);




#endif /* MCAL_ADC_H_ */
