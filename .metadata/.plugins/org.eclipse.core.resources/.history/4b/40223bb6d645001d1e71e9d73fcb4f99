/**************************************************************************************************************************************
*
*                                                 INCLUDES
*
**************************************************************************************************************************************/
#include "Macros.h"
#include "Std_Types.h"
#include "PWM.h"

/**************************************************************************************************************************************
*
*                                                 types Definition
*
**************************************************************************************************************************************/


	/*              Direction Type                       */
 typedef enum
 {
	ClockWise,
	AntiClockWise
 } Motor_Direction;

/**************************************************************************************************************************************
*
*                                                Functions Prototypes
*
**************************************************************************************************************************************/

 /* Set Direction And Speed */
 void DcMotor_Rotate(Motor_Direction Dir , uint8 speed )
 {

 	if(Dir==AntiClockWise)
 	{
 		// To Rotate The Motor ACW
 		SET_BIT(PORTD,2);
 		CLR_BIT(PORTD,3);


 	}
 	else
 	{
 		// To Rotate The Motor CW
 		       CLR_BIT(PORTD,2);
 			   SET_BIT(PORTD,3);
 	}












}
